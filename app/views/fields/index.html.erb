<h1>Listing fields</h1>

<table class="table">
  <thead>
    <tr>
      <th>Key name</th>
      <th>Value name</th>
      <th>Activity</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @fields.each do |field| %>
      <tr>
        <td><%= field.key_name %></td>
        <td><%= field.value_name %></td>
        <td><%= field.activity.subject %></td>
        <td><%= link_to 'Show', field %></td>
        <td><%= link_to 'Edit', edit_field_path(field) %></td>
        <td><%= link_to 'Destroy', field, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

