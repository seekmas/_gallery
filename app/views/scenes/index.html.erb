<h1>Listing scenes</h1>

<table class="table">
  <thead>
    <tr>
      <th>Subject</th>
      <th>Photo</th>
      <th>Activity</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @scenes.each do |scene| %>
      <tr>
        <td><%= scene.subject %></td>
        <td><%=image_tag scene.photo.url(:thumb) %></td>
        <td><%= scene.activity_id %></td>
        <td><%= link_to 'Show', scene %></td>
        <td><%= link_to 'Edit', edit_scene_path(scene) %></td>
        <td><%= link_to 'Destroy', scene, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

